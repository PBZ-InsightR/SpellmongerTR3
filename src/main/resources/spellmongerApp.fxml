<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.insightr.spellmonger.View.Controller">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox spacing="10.0" style="-fx-background-color: eee; -fx-border-color: ccc;">
               <children>
                  <TextField fx:id="username1" promptText="Player 1" />
                  <TextField fx:id="username2" layoutX="10.0" layoutY="10.0" promptText="Player 2" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="goButton" mnemonicParsing="false" onAction="#go" text="Go" />
                  <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearGame" text="Clear" />
                  <ToggleButton fx:id="aiButton" mnemonicParsing="false" onAction="#addAI" text="Use AI" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </HBox>
            <HBox alignment="BOTTOM_LEFT" spacing="10.0">
               <children>
                  <Region prefHeight="116.0" prefWidth="1.0" />
                  <Button mnemonicParsing="false" prefHeight="150.0" prefWidth="80.0" text="LEFT" />
                  <Button mnemonicParsing="false" prefHeight="150.0" prefWidth="80.0" text="MIDDLE" />
                  <Button mnemonicParsing="false" prefHeight="150.0" prefWidth="80.0" text="RIGHT" />
                  <Button mnemonicParsing="false" prefHeight="150.0" prefWidth="80.0" text="PlayCardP2" />
                  <Region layoutX="10.0" layoutY="10.0" prefHeight="150.0" prefWidth="80.0" />
               </children>
               <VBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </top>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Region prefHeight="74.0" prefWidth="8.0" />
                  <Button mnemonicParsing="false" prefHeight="150.0" prefWidth="80.0" text="LEFT" />
                  <Button mnemonicParsing="false" prefHeight="150.0" prefWidth="80.0" text="MIDDLE" />
                  <Button mnemonicParsing="false" prefHeight="150.0" prefWidth="80.0" text="RIGHT" />
                  <Button mnemonicParsing="false" prefHeight="150.0" prefWidth="80.0" text="PlayCardP1" />
                  <Region layoutY="10.0" prefHeight="150.0" prefWidth="80.0" />
               </children>
               <VBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="actiontarget" text="Welcome to SpellmongerApp" />
         </children>
      </VBox>
   </bottom>
   <left>
      <VBox prefHeight="300.0" prefWidth="160.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" prefHeight="150.0" prefWidth="80.0" text="Deck P2" />
            <Button mnemonicParsing="false" prefHeight="150.0" prefWidth="80.0" text="Deck P1" />
         </children>
      </VBox>
   </left>
   <right>
      <Button mnemonicParsing="false" prefHeight="160.0" prefWidth="80.0" text="Graveyard" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
